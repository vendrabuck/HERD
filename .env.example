# Database
POSTGRES_USER=<db user>
POSTGRES_PASSWORD= <db password>
POSTGRES_DB=<db itself>

# Auth Service (required: services will not start without a secret key)
AUTH_SECRET_KEY=change-me-in-production-use-a-long-random-string
AUTH_ALGORITHM=HS256
AUTH_ACCESS_TOKEN_EXPIRE_MINUTES=30
AUTH_REFRESH_TOKEN_EXPIRE_DAYS=7

# Superadmin seed â€” set all three to create the superadmin account on first startup.
# Once created, these values are ignored on subsequent restarts.
# Leave blank in environments where the superadmin already exists.
SUPERADMIN_EMAIL=<super user email>
SUPERADMIN_USERNAME=<super user >
SUPERADMIN_PASSWORD=<super user passwd>

# Service URLs (internal Docker network)
INVENTORY_SERVICE_URL=http://inventory:8000
AUTH_SERVICE_URL=http://auth:8000

# CORS (comma-separated origins allowed by all backend services)
CORS_ORIGINS=http://localhost:5173,http://localhost,http://192.168.1.233

# Internal service-to-service token (used by reservations to update inventory device status)
INTERNAL_API_TOKEN=change-me-internal-token

# NATS
NATS_URL=nats://nats:4222
